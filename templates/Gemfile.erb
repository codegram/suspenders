gem 'pg'
gem 'rack-timeout'
gem 'puma'
gem 'foreman'

gem 'oj'
gem 'oj_mimic_json'

gem 'slim'
gem 'devise'
gem 'devise-i18n'
gem 'simple_form'
gem 'bootstrap-sass', '~> 3.3.4'
gem 'sass-rails', '~> 4.0.3'
gem 'jquery-rails'
gem 'uglifier'
